   {{log data}}
    <h2>Random: </h2>
    <h5>lists a random podcast</h5>

    <div class="container">
    <article id="{{data.title}}">
        <h2 class="title">{{data.title}}</h2>
        <h5 class="author">{{data.author}}</h5>

        <div class="content">
            <img src="/public/{{data.image}}" width="200px" height="200px" alt="not image found" onerror="data.onerror=null;data.src='/public/podcast-header1.jpg';" />
            <br>
            <div class="description">{{{data.description}}}</div>
            <div class="ratings">
                <div><strong> Avg. Rating: </strong>{{getAverage data.ratings}}</div>
                <div>
                    <form method="POST" action="/addRating/{{data.title}} ">
                       <div id="ratinginput"><input style="width: 95px;" type="number" step="0.1" name="newRating" max="5" min="0" placeholder="Add new Rating"></input></div>
                        <div><button type="submit">Submit</button></div>
                    </form>
                </div>
            </div>
        </div>
    </article>
    </div>

